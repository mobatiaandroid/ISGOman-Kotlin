<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_small" >

    <com.example.isgoman_kotlin.manager.CustomTextViewSemiBold
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:gravity="center"
        android:layout_marginTop="3dp"
        android:padding="5dp" />

    <RelativeLayout
        android:id="@+id/relBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_margin="2dp"
        android:gravity="center_horizontal" >

        <com.example.isgoman_kotlin.manager.CustomButtonRegular
            android:id="@+id/dialogButtonOK"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Ok"
            android:textColor="@color/white"
            android:background="@drawable/button"/>

        <com.example.isgoman_kotlin.manager.CustomButtonRegular
            android:id="@+id/dialogButtonCancel"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/dialogButtonOK"
            android:gravity="center"
            android:text="Cancel"            android:textColor="@color/white"


            android:background="@drawable/buttonred"/>
    </RelativeLayout>

</RelativeLayout>
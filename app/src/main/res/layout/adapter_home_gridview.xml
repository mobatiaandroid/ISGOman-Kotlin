<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="@dimen/home_img_width"
        android:layout_height="@dimen/home_img_height"
        android:background="@android:color/transparent"
        android:layout_centerHorizontal="true" />

    <com.example.isgoman_kotlin.manager.CustomTextViewSemiBold
        android:id="@+id/dep_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgView"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:maxLines="2"
        android:minLines="2" />
    <com.example.isgoman_kotlin.manager.CustomTextViewSemiBold
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text="1"
        android:id="@+id/notifyIconBadge"
        android:background="@drawable/circularshapered"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:visibility="invisible"
        android:padding="2dp"
        android:textColor="@color/white"
        android:layout_alignRight="@+id/imgView"
        android:layout_alignEnd="@+id/imgView" />

</RelativeLayout>